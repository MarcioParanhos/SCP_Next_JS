datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String? // se usar Credentials (hash com bcrypt)
  image         String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Nte {
  id             Int            @id @default(autoincrement())
  name           String
  municipalities Municipality[]

  @@map("nte")
}

model Municipality {
  id      Int          @id @default(autoincrement())
  name    String
  nte_id  Int
  nte     Nte          @relation(fields: [nte_id], references: [id])
  schools SchoolUnit[]

  @@map("municipalities")
}

model SchoolUnit {
  id              Int            @id @default(autoincrement())
  name            String
  sec_cod         String         @map("sec_cod")
  uo_code         String         @default("UNKNOWN") @map("uo_code")
  status          String         @default("1")
  typology_id     Int?
  typology        Typology?      @relation(fields: [typology_id], references: [id])
  municipality_id Int
  municipality    Municipality   @relation(fields: [municipality_id], references: [id])
  // Relação inversa para registrar as homologações relacionadas a esta unidade
  homologations   Homologation[]

  @@map("school_units")
}

model Discipline {
  id   Int    @id @default(autoincrement())
  name String

  @@map("disciplines")
}

model Typology {
  id    Int          @id @default(autoincrement())
  name  String
  units SchoolUnit[]

  @@map("typologies")
}

// Modelo para registrar ações de homologação/deshomologação
// Cada registro representa uma ação executada sobre uma unidade escolar
model Homologation {
  id             Int        @id @default(autoincrement())
  action         String // e.g. "HOMOLOGATED" | "UNHOMOLOGATED"
  reason         String? // motivo/observação fornecida pelo usuário
  performed_by   String? // id do usuário que executou a ação (opcional)
  school_unit_id Int
  schoolUnit     SchoolUnit @relation(fields: [school_unit_id], references: [id])
  createdAt      DateTime   @default(now())

  @@index([school_unit_id])
  @@map("homologations")
}
